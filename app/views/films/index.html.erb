<p id="notice"><%= notice %></p>

<h1 class="fs-1 text-center my-5">Tous tes films</h1>


<div class="container">
<a href="/">Back</a>
  <% @films.each do |film| %>
  <div class="row align-items-center shadow-sm p-3 mb-5 bg-body rounded my-4">


    <div class="col-3 px-3 py-5">
      <img class="img-thumbnail" src="<%= film.photo %>">
    </div>
    <div class="col-7 pl-3 pr-5 py-5">
      <h2 class="mb-3"><span class="fs-1"><%= film.title %></span></h2>
      <p class="mb-2">Synopsis : <%= film.synopsis %></p>
      <p class="mb-2">RÃ©alisateur : <%= film.director %></p>
      <p class="mb-2">Date de sortie : <%= film.release_date %></p>
    </div>
    <div class="col-2 px-3 py-5">

      <%= link_to 'Edit', edit_film_path(film), class: "btn btn-primary px-4 my-1" %>
      <%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary px-4 my-1" %>
    </div>
  </div>
  <% end %>
  <%= link_to '+ Ajouter un film', new_film_path, class: "d-flex justify-content-center btn btn-success mb-5" %>
</div>

<br>
